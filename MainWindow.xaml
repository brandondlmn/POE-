<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Awareness Chatbot" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F7FA"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header with Logo and Title -->
        <Border Grid.Row="0" Background="#FF2E7D32" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image x:Name="LogoImage" Source="chat.jpeg" Width="40" Height="40" Margin="0,0,10,0" Stretch="Uniform" />
                <TextBlock Text="Cybersecurity Awareness Chatbot" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Welcome Panel (Shown First) -->
            <Border x:Name="WelcomePanel" Grid.Row="0" 
                    Visibility="Visible"
                    Background="White"
                    CornerRadius="5"
                    Padding="15"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Welcome to the Cybersecurity Awareness Chatbot!" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#FF2E7D32" 
                               TextAlignment="Center"
                               Margin="0,0,0,15"/>
                    <TextBlock Text="This chatbot is designed to help you learn about cybersecurity, manage tasks, and test your knowledge with quizzes. Click 'Start' to begin your journey to a safer online experience!" 
                               Foreground="#FF424242"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>
                    <Button x:Name="StartButton" 
                            Content="Start" 
                            Width="150" 
                            Height="40"
                            Margin="0,0,0,0" 
                            Click="StartButton_Click" 
                            Background="#FF2E7D32" 
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- User Info Input (Initially Hidden) -->
            <Border x:Name="UserInfoPanel" Grid.Row="0" 
                    Visibility="Collapsed"
                    Background="White"
                    CornerRadius="5"
                    Padding="15"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Welcome to Cybersecurity Awareness Chatbot" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#FF2E7D32" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Please enter your name:" 
                               Foreground="#FF424242"/>
                    <TextBox x:Name="NameTextBox" 
                             Margin="0,5,0,10" 
                             Padding="8"
                             BorderBrush="#FFBDBDBD"/>
                    <TextBlock Text="Please enter a cybersecurity topic you're interested in:" 
                               Foreground="#FF424242" 
                               TextWrapping="Wrap"/>
                    <TextBlock Text="(e.g., phishing, password safety, safe browsing, SQL injection, cybersecurity tips)" 
                               FontStyle="Italic"
                               Foreground="#FF757575"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="InterestTextBox" 
                             Margin="0,5,0,10" 
                             Padding="8"
                             BorderBrush="#FFBDBDBD"/>
                    <Button x:Name="SubmitUserInfoButton" 
                            Content="Submit" 
                            Width="120" 
                            Height="32"
                            Margin="0,10,0,0" 
                            Click="SubmitUserInfoButton_Click" 
                            Background="#FF2E7D32" 
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- Main Menu (Hidden Until User Info Submitted) -->
            <Border x:Name="MainMenuPanel" Grid.Row="0" 
                    Visibility="Collapsed"
                    Background="White"
                    CornerRadius="5"
                    Padding="15"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock x:Name="MenuGreetingTextBlock" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#FF2E7D32" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Please select an option:" 
                               Foreground="#FF424242"
                               Margin="0,0,0,5"/>
                    <Button x:Name="ViewDetailsButton" 
                            Content="View user details" 
                            Margin="0,5" 
                            Click="ViewDetailsButton_Click" 
                            Background="#FF2E7D32" 
                            Foreground="White"
                            Height="32"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                    <Button x:Name="AskQuestionButton" 
                            Content="Ask ChatBot AI questions" 
                            Margin="0,5" 
                            Click="AskQuestionButton_Click" 
                            Background="#FF2E7D32" 
                            Foreground="White"
                            Height="32"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                    <Button x:Name="ManageTasksButton" 
                            Content="Manage Tasks" 
                            Margin="0,5" 
                            Click="ManageTasksButton_Click" 
                            Background="#FF2E7D32" 
                            Foreground="White"
                            Height="32"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                    <Button x:Name="ViewHistoryButton" 
                            Content="View conversation history" 
                            Margin="0,5" 
                            Click="ViewHistoryButton_Click" 
                            Background="#FF2E7D32" 
                            Foreground="White"
                            Height="32"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                    <Button x:Name="TakeQuizButton" 
                            Content="Take Cybersecurity Quiz" 
                            Margin="0,5" 
                            Click="TakeQuizButton_Click" 
                            Background="#FF2E7D32" 
                            Foreground="White"
                            Height="32"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                    <Button x:Name="ExitButton" 
                            Content="Close" 
                            Margin="0,5" 
                            Click="ExitButton_Click" 
                            Background="#FFD32F2F" 
                            Foreground="White"
                            Height="32"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- Chat Interface (Hidden Until Option 2 Selected) -->
            <Border x:Name="ChatPanel" Grid.Row="0" 
                    Visibility="Collapsed"
                    Background="White"
                    CornerRadius="5"
                    Padding="15"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Ask Away About Cybersecurity" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#FF2E7D32" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="You can ask me about:" 
                               Foreground="#FF424242"/>
                    <TextBlock Text="1. My purpose, 2. Password safety, 3. Phishing attacks, 4. Safe browsing, 5. SQL injection, 6. Cybersecurity tips, or type 'add task' or 'show tasks'" 
                               Foreground="#FF757575" 
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    <TextBox x:Name="QuestionTextBox" 
                             Margin="0,10,0,0" 
                             Padding="8"
                             BorderBrush="#FFBDBDBD"
                             MinHeight="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="BackToMenuButton" 
                                Content="Back to Menu" 
                                Width="120"
                                Height="32"
                                Margin="0,0,10,0" 
                                Click="BackToMenuButton_Click" 
                                Background="#FF757575" 
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                        <Button x:Name="SubmitQuestionButton" 
                                Content="Ask" 
                                Width="120"
                                Height="32"
                                Click="SubmitQuestionButton_Click" 
                                Background="#FF2E7D32" 
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Tasks Interface (Hidden Until Manage Tasks Selected) -->
            <Border x:Name="TasksPanel" Grid.Row="0" 
                    Visibility="Collapsed"
                    Background="White"
                    CornerRadius="5"
                    Padding="15"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Manage Your Cybersecurity Tasks" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#FF2E7D32" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Add a new task:" 
                               Foreground="#FF424242"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TaskTitleTextBox" 
                             Margin="0,5" 
                             Padding="8"
                             BorderBrush="#FFBDBDBD"
                             Text="Task Title"/>
                    <TextBox x:Name="TaskDescriptionTextBox" 
                             Margin="0,5" 
                             Padding="8"
                             BorderBrush="#FFBDBDBD"
                             MinHeight="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Text="Task Description"/>
                    <TextBlock Text="Set reminder (optional, format: yyyy-MM-dd HH:mm):" 
                               Foreground="#FF424242"
                               Margin="0,5,0,5"/>
                    <TextBox x:Name="TaskReminderTextBox" 
                             Margin="0,5" 
                             Padding="8"
                             BorderBrush="#FFBDBDBD"
                             Text="YYYY-MM-DD HH:MM"/>
                    <Button x:Name="AddTaskButton" 
                            Content="Add Task" 
                            Width="120"
                            Height="32"
                            Margin="0,10,0,0" 
                            Click="AddTaskButton_Click" 
                            Background="#FF2E7D32" 
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                    <TextBlock Text="Your Tasks:" 
                               Foreground="#FF424242"
                               Margin="0,10,0,5"/>
                    <ListView x:Name="TasksListView" 
                              Height="150"
                              Margin="0,5"
                              SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Title" Width="150" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Reminder" Width="120" DisplayMemberBinding="{Binding ReminderDate, StringFormat='yyyy-MM-dd HH:mm'}"/>
                                <GridViewColumn Header="Status" Width="80" DisplayMemberBinding="{Binding Status}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                        <Button x:Name="MarkTaskCompleteButton" 
                                Content="Mark as Complete" 
                                Width="120"
                                Height="32"
                                Margin="0,0,10,0" 
                                Click="MarkTaskCompleteButton_Click" 
                                Background="#FF2E7D32" 
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                        <Button x:Name="DeleteTaskButton" 
                                Content="Delete Task" 
                                Width="120"
                                Height="32"
                                Margin="0,0,10,0" 
                                Click="DeleteTaskButton_Click" 
                                Background="#FFD32F2F" 
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                    </StackPanel>
                    <Button x:Name="BackToMenuFromTasksButton" 
                            Content="Back to Menu" 
                            Width="120"
                            Height="32"
                            Margin="0,10,0,0" 
                            Click="BackToMenuFromTasksButton_Click" 
                            Background="#FF757575" 
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- Quiz Interface (Hidden Until Take Quiz Selected) -->
            <Border x:Name="QuizPanel" Grid.Row="0" 
                    Visibility="Collapsed"
                    Background="White"
                    CornerRadius="5"
                    Padding="15"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock x:Name="QuizTitleTextBlock" 
                               Text="Cybersecurity Quiz" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#FF2E7D32" 
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="DisplayedQuestion" 
                               Foreground="#FF424242" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="DisplayScore" 
                               Foreground="#FF424242" 
                               Margin="0,0,0,10"/>
                    <Button x:Name="FirstChoiceButton" 
                            Margin="0,5" 
                            Height="32" 
                            Click="HandleAnswerSelection" 
                            Background="LightGray" 
                            Foreground="#FF424242"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                    <Button x:Name="SecondChoiceButton" 
                            Margin="0,5" 
                            Height="32" 
                            Click="HandleAnswerSelection" 
                            Background="LightGray" 
                            Foreground="#FF424242"
                            FontWeight="SemiBold"
                            BorderThickness="0"/>
                    <Button x:Name="ThirdChoiceButton" 
                            Margin="0,5" 
                            Height="32" 
                            Click="HandleAnswerSelection" 
                            Background="LightGray" 
                            Foreground="#FF424242"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Visibility="Collapsed"/>
                    <Button x:Name="FourthChoiceButton" 
                            Margin="0,5" 
                            Height="32" 
                            Click="HandleAnswerSelection" 
                            Background="LightGray" 
                            Foreground="#FF424242"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Visibility="Collapsed"/>
                    <TextBlock x:Name="FeedbackTextBlock" 
                               Foreground="#FF424242" 
                               TextWrapping="Wrap" 
                               Margin="0,10,0,10"
                               Visibility="Collapsed"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="BackToMenuFromQuizButton" 
                                Content="Back to Menu" 
                                Width="120"
                                Height="32"
                                Margin="0,0,10,0" 
                                Click="BackToMenuFromQuizButton_Click" 
                                Background="#FF757575" 
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                        <Button x:Name="NextQuestionButton" 
                                Content="Next Question" 
                                Width="120"
                                Height="32"
                                Click="HandleNextQuestion" 
                                Background="#FF2E7D32" 
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Conversation Display -->
            <Border Grid.Row="1" 
                    Background="White"
                    CornerRadius="5"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    Margin="0,0,0,15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                    <TextBlock x:Name="ConversationTextBlock" 
                               Foreground="#FF424242" 
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

            <!-- Follow-Up Prompt (Hidden Until Needed) -->
            <Border x:Name="FollowUpPanel" Grid.Row="2" 
                    Visibility="Collapsed"
                    Background="White"
                    CornerRadius="5"
                    Padding="15"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Would you like a follow-up on this topic? (yes/no)" 
                               Foreground="#FF424242"
                               Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="FollowUpNoButton" 
                                Content="No" 
                                Width="80"
                                Height="32"
                                Margin="0,0,10,0" 
                                Click="FollowUpNoButton_Click" 
                                Background="#FF757575" 
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                        <Button x:Name="FollowUpYesButton" 
                                Content="Yes" 
                                Width="80"
                                Height="32"
                                Click="FollowUpYesButton_Click" 
                                Background="#FF2E7D32" 
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>